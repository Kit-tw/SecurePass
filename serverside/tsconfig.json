{
  "compilerOptions": {
    "target": "es2020",                // Change from "es5" for better modern Node support
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",        // Required for node-style resolution
    "resolveJsonModule": true,         // If you plan to import JSON files
    "skipLibCheck": true               // Optional: faster builds
  }
}